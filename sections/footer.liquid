<footer class="bg-gray-900 text-white py-10">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- Logo & Store Info -->
      <div>
        {% if section.settings.logo != blank %}
          <a href="{{ shop.url }}">
            <img src="{{ section.settings.logo | image_url }}" alt="{{ shop.name }}" class="h-12">
          </a>
        {% else %}
          <h2 class="text-xl font-bold">{{ shop.name }}</h2>
        {% endif %}
        <p class="mt-3 text-gray-400">{{ section.settings.address }}</p>
        <p class="text-gray-400">{{ section.settings.phone }}</p>
      </div>

      <!-- Navigation Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{{ section.settings.menu_title }}</h3>
        <ul>
          {% for link in section.settings.menu.links %}
            <li class="mb-2">
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Social Media Icons -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" class="text-gray-400 hover:text-white">
              <i class="fab fa-facebook-f"></i>
            </a>
          {% endif %}
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" class="text-gray-400 hover:text-white">
              <i class="fab fa-twitter"></i>
            </a>
          {% endif %}
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" class="text-gray-400 hover:text-white">
              <i class="fab fa-instagram"></i>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Newsletter Signup -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Subscribe</h3>
        {% form 'customer' %}
          <input type="email" name="contact[email]" placeholder="Enter your email" class="p-2 w-full bg-gray-800 text-white">
          <button type="submit" class="mt-2 w-full bg-blue-500 text-white py-2">Subscribe</button>
        {% endform %}
      </div>

    </div>

    <!-- Footer Bottom -->
    <div class="mt-10 border-t border-gray-700 pt-6 text-center text-gray-400">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Store Address",
      "default": "123 Street, City, Country"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "+1 234 567 890"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu Title",
      "default": "Quick Links"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
